					"name": "Login Usuario",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    ",
									"    // Verifica que exista el token",
									"    if (response.token) {",
									"        pm.collectionVariables.set('token', response.token);",
									"        console.log('Token guardado:', response.token);",
									"    } else {",
									"        console.log('La respuesta no contiene token');",
									"    }",
									"    ",
									"    // Verifica y guarda el userId de diferentes formas posibles",
									"    if (response.usuario) {",
									"        const userId = response.usuario._id || response.usuario.id || response.usuario.userId;",
									"        if (userId) {",
									"            pm.collectionVariables.set('userId', userId);",
									"            console.log('UserID guardado:', userId);",
									"        } else {",
									"            console.log('No se encontró ID de usuario en la respuesta');",
									"        }",
									"    }",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						}
